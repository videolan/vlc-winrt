<UserControl
    x:Class="VLC_WinRT.Views.UserControls.Placeholders.FakeVideoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VLC_WinRT.Views.UserControls.Placeholders"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <Grid Width="266">
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="{ThemeResource ApplicationOverlayTranslucentThemeBrush}">
            <FontIcon Glyph="{StaticResource VideoSymbol}"
                      FontFamily="ms-appx:SEGMDL2.TTF#Segoe MDL2 Assets"
                      FontSize="42"
                      Foreground="{ThemeResource MainColor}" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Width="140"
                  Height="13"
                  HorizontalAlignment="Left"
                  Background="{ThemeResource ApplicationOverlayTranslucentThemeBrush}" />
            <Grid Grid.Row="1"
                  Height="13"
                  Width="50"
                  HorizontalAlignment="Left"
                  Background="{ThemeResource ApplicationOverlayTranslucentThemeBrush}" />
        </Grid>
    </Grid>
</UserControl>

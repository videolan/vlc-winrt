            <DataTemplate x:Key="ColumnHeaderDataTemplate">
                <TextBlock Text="{Binding}" Style="{StaticResource VLCSubHeaderStyle}"/>
            </DataTemplate>
            <Style x:Key="VLCSubHeaderStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource MainColor}" />
                <Setter Property="Margin" Value="0" />
                <Setter Property="FontSize" Value="26" />
                <Setter Property="FontWeight" Value="ExtraLight" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>

            <Style x:Key="ColumnHeaderTextStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="SemiBold"/>

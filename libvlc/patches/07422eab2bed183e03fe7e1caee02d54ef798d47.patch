From 07422eab2bed183e03fe7e1caee02d54ef798d47 Mon Sep 17 00:00:00 2001
From: Jean-Baptiste Kempf <jb@videolan.org>
Date: Wed, 16 Apr 2014 16:09:53 +0200
Subject: [PATCH] Cheat for Windows Store subtitles

---
 lib/video.c | 4 ++++
 1 file changed, 4 insertions(+)

diff --git a/lib/video.c b/lib/video.c
index b2c9b34..9f48316 100644
--- a/lib/video.c
+++ b/lib/video.c
@@ -350,7 +350,11 @@ int libvlc_video_set_subtitle_file( libvlc_media_player_t *p_mi,
 
     if( p_input_thread )
     {
+#if VLC_WINSTORE_APP
+        if( !input_AddSubtitle( p_input_thread, psz_subtitle, false ) )
+#else
         if( !input_AddSubtitle( p_input_thread, psz_subtitle, true ) )
+#endif
             b_ret = true;
         vlc_object_release( p_input_thread );
     }
